{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "python -m pytest src/tests/ -v --cov=. --cov-report=term-missing",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests with HTML Coverage",
            "type": "shell",
            "command": "python -m pytest src/tests/ -v --cov=. --cov-report=html && $BROWSER htmlcov/index.html",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Python Cache",
            "type": "shell",
            "command": "find . -type d -name \"__pycache__\" -exec rm -r {} + && find . -name \"*.pyc\" -delete",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}